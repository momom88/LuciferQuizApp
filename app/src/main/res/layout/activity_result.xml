<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context="com.example.android.udacityquizapp.MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:src="@drawable/lucifer2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/results_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_marginBottom"
                android:textColor="#00FF00"
                android:textSize="24dp" />

            <Button
                style="@style/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#840c0d"
                android:onClick="reset"
                android:text="@string/reset"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/hello"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="@string/results"
                android:textColor="#F4F6F6"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/place"
                style="@style/questions" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/anwercu"
                android:text="@string/losangeles" />


            <TextView
                android:id="@+id/nightclub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/questions"
                android:text="@string/nightclub" />

            <TextView
                style="@style/anwercu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lux" />

            <TextView
                android:id="@+id/instruments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/questions"
                android:text="@string/instrument" />

            <TextView
                style="@style/anwercu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/piano" />

            <TextView
                android:id="@+id/reveals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/questions"
                android:text="@string/reveals" />

            <TextView
                style="@style/anwercu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wings" />

            <TextView
                android:id="@+id/demon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/questions"
                android:text="@string/demon"/>

            <TextView
                style="@style/anwercu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/maze" />

            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/questions"
                android:text="@string/years" />

            <TextView
                style="@style/anwercu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>